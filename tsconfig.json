{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "*"
      ],
      "@pages/*": [
        "pages/*"
      ],
      "@helpers/*": [
        "helpers/*"
      ],
      "@tests/*": [
        "tests/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@playwright/test"
    ]
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
} 